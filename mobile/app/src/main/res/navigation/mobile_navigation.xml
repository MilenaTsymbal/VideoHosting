<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mobile.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_video"
        android:name="com.example.mobile.ui.video.VideoFragment"
        android:label="Video"
        tools:layout="@layout/fragment_video" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.mobile.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.mobile.ui.channel.ChannelFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_channel" />

    <fragment
        android:id="@+id/navigation_addVideo"
        android:name="com.example.mobile.ui.addVideo.AddVideoFragment"
        android:label="Add video"
        tools:layout="@layout/fragment_add_video" />

    <fragment
        android:id="@+id/navigation_channel"
        android:name="com.example.mobile.ui.channel.ChannelFragment"
        android:label="Channel"
        tools:layout="@layout/fragment_channel" />

</navigation>