<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="100dp"
    android:paddingStart="15dp"
    android:paddingTop="170dp"
    android:paddingEnd="15dp"
    android:scrollbars="none"
    tools:context=".ui.addVideo.AddVideoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Video name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/videoNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Enter video name"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Poster image:"
            android:textSize="18sp" />

        <Button
            android:id="@+id/selectPosterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:text="Select poster image" />

        <ImageView
            android:id="@+id/posterPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Video file:"
            android:textSize="18sp" />

        <Button
            android:id="@+id/selectVideoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:text="Select video" />

        <TextView
            android:id="@+id/videoFileNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text=""
            android:textSize="16sp" />

        <Button
            android:id="@+id/addVideoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:text="Add video" />

    </LinearLayout>

</ScrollView>
